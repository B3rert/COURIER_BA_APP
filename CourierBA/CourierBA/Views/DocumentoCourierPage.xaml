                                     VerticalOptions="End"
                                     x:Name="pickMoneda"
                                     ItemDisplayBinding="{Binding Nombre}"
                                     SelectedIndexChanged="pickMoneda_SelectedIndexChanged"/>
                    </StackLayout>
-->


                </Grid>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>